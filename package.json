{
	"name": "spatial-controls",
	"version": "3.0.4",
	"description": "Customizable 3D controls.",
	"homepage": "https://github.com/vanruesc/spatial-controls",
	"main": "build/spatial-controls.js",
	"module": "build/spatial-controls.esm.js",
  "types": "build/types/index.d.ts",
	"exports": {
		".": "./build/spatial-controls.esm.js"
	},
	"sideEffects": false,
	"license": "Zlib",
	"keywords": [
		"movement",
		"translation",
		"rotation",
		"object",
		"controls",
		"keybindings",
		"3d"
	],
	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/spatial-controls.git"
	},
	"bugs": {
		"url": "https://github.com/vanruesc/spatial-controls/issues"
	},
	"files": [
		"build"
	],
	"scripts": {
		"ava": "ava",
		"build": "run-s build:*",
		"build:js": "cross-env NODE_ENV=production ts-node-script esbuild",
		"build:dts": "tsc -p tsconfig.d.json",
		"dev": "run-p start watch:*",
		"doc": "rimraf public/docs && typedoc",
		"lint": "eslint src demo/src --fix",
		"prepublishOnly": "run-s test doc",
		"pretest": "rimraf build",
		"test": "run-s lint build ava",
		"start": "hs -s",
		"watch": "run-p watch:*",
		"watch:eslint": "esw -w --ext .ts src demo/src",
		"watch:js": "ts-node-script esbuild -w"
	},
	"ava": {
		"failFast": true,
		"files": [
			"test/**/*.js"
		],
		"require": [
			"esm"
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": "aether/typescript",
		"parserOptions": {
			"project": [
				"tsconfig.json"
			]
		}
	},
	"peerDependencies": {
		"three": ">= 0.118.0 < 0.124.0"
	},
	"devDependencies": {
		"@types/dat.gui": "0.x.x",
		"@types/node": "14.x.x",
		"@types/yargs": "15.x.x",
		"@typescript-eslint/eslint-plugin": "4.x.x",
		"@typescript-eslint/parser": "4.x.x",
		"ava": "3.x.x",
		"chokidar": "3.x.x",
		"cross-env": "7.x.x",
		"dat.gui": "0.x.x",
		"esbuild": "0.x.x",
		"eslint": "7.x.x",
		"eslint-config-aether": "1.x.x",
		"eslint-watch": "7.x.x",
		"esm": "3.x.x",
		"http-server": "0.x.x",
		"npm-run-all": "4.x.x",
		"rimraf": "3.x.x",
		"three": "0.x.x",
		"three-demo": "4.x.x",
		"ts-node": "9.x.x",
		"tslib": "2.x.x",
		"typedoc": "0.x.x",
		"typescript": "4.x.x",
		"yargs": "16.x.x"
	}
}
