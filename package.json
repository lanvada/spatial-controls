{
	"name": "spatial-controls",
	"version": "5.0.4",
	"description": "Configurable 3D movement controls.",
	"homepage": "https://github.com/vanruesc/spatial-controls",
	"main": "dist/spatial-controls.js",
	"module": "dist/spatial-controls.js",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": "./dist/spatial-controls.js"
	},
	"type": "module",
	"sideEffects": false,
	"license": "Zlib",
	"keywords": [
		"movement",
		"translation",
		"rotation",
		"object",
		"camera",
		"orbit",
		"controls",
		"keybindings",
		"3d"
	],
	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/spatial-controls.git"
	},
	"bugs": {
		"url": "https://github.com/vanruesc/spatial-controls/issues"
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">= 0.14.0"
	},
	"scripts": {
		"ava": "ava",
		"build": "run-s build:*",
		"build:js": "node esbuild -m",
		"build:dts": "tsc -p tsconfig.d.json",
		"clean": "del-cli dist public",
		"copy": "cpy --cwd=demo/static --parents \"**/*\" \"../../public/demo\"",
		"deploy": "run-s test copy doc",
		"dev": "run-s clean copy && run-p start watch",
		"doc": "typedoc",
		"lint": "tsc --noemit & eslint --ext .ts --fix src demo/src",
		"prepublishOnly": "run-s test doc",
		"test": "run-s lint clean build ava",
		"start": "serve public",
		"watch": "run-p watch:*",
		"watch:tsc": "tsc --noemit --watch --preserveWatchOutput",
		"watch:eslint": "esw -w --ext .ts --color src demo/src",
		"watch:js": "node esbuild -w"
	},
	"ava": {
		"failFast": true,
		"files": [
			"test/**/*.js"
		]
	},
	"eslintConfig": {
		"extends": "aether/typescript"
	},
	"peerDependencies": {
		"three": "0.x.x"
	},
	"devDependencies": {
		"@types/dat.gui": "0.x.x",
		"@types/three": "0.x.x",
		"@typescript-eslint/eslint-plugin": "5.x.x",
		"@typescript-eslint/parser": "5.x.x",
		"ava": "3.x.x",
		"cpy-cli": "3.x.x",
		"dat.gui": "0.x.x",
		"del-cli": "4.x.x",
		"esbuild": "0.x.x",
		"eslint": "8.x.x",
		"eslint-config-aether": "1.x.x",
		"eslint-watch": "8.x.x",
		"npm-run-all": "4.x.x",
		"serve": "13.x.x",
		"three": "0.x.x",
		"three-demo": "5.x.x",
		"tslib": "2.x.x",
		"typedoc": "0.x.x",
		"typescript": "4.x.x"
	}
}
