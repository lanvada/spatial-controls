{
	"name": "spatial-controls",
	"version": "3.0.3",
	"description": "Customizable 3D controls.",
	"homepage": "https://github.com/vanruesc/spatial-controls",
	"main": "build/spatial-controls.js",
	"module": "build/spatial-controls.esm.js",
  "types": "build/types/index.d.ts",
	"exports": {
		".": "./build/spatial-controls.esm.js"
	},
	"sideEffects": false,
	"license": "Zlib",
	"keywords": [
		"movement",
		"translation",
		"rotation",
		"object",
		"controls",
		"keybindings",
		"3d"
	],
	"author": {
		"name": "Raoul van RÃ¼schen",
		"email": "vanruesc@outlook.de"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/vanruesc/spatial-controls.git"
	},
	"bugs": {
		"url": "https://github.com/vanruesc/spatial-controls/issues"
	},
	"files": [
		"build"
	],
	"scripts": {
		"ava": "ava",
		"build": "rollup -c",
		"build:production": "cross-env NODE_ENV=production rollup -c",
		"watch": "rollup -c -w",
		"dev": "concurrently -k -n server,rollup,eslint \"hs -s\" \"rollup -c -w\" \"esw -w --ext .ts src demo/src\"",
		"doc": "rimraf public/docs && typedoc",
		"lint": "eslint src demo/src",
		"prepublishOnly": "npm test && npm run doc",
		"pretest": "rimraf build && npm run build:production",
		"test": "ava"
	},
	"ava": {
		"failFast": true,
		"files": [
			"test/**/*.js"
		],
		"require": [
			"esm"
		]
	},
	"eslintConfig": {
		"root": true,
		"extends": "aether/typescript",
		"parserOptions": {
			"project": [
				"tsconfig.json"
			]
		}
	},
	"peerDependencies": {
		"three": ">= 0.118.0 < 0.123.0"
	},
	"devDependencies": {
		"@babel/core": "7.x.x",
		"@babel/preset-env": "7.x.x",
		"@rollup/plugin-babel": "5.x.x",
		"@rollup/plugin-node-resolve": "10.x.x",
		"@rollup/plugin-typescript": "6.x.x",
		"@types/dat.gui": "0.x.x",
		"@typescript-eslint/eslint-plugin": "4.x.x",
		"@typescript-eslint/parser": "4.x.x",
		"ava": "3.x.x",
		"concurrently": "5.x.x",
		"cross-env": "7.x.x",
		"dat.gui": "0.x.x",
		"eslint": "7.x.x",
		"eslint-config-aether": "1.x.x",
		"eslint-watch": "7.x.x",
		"esm": "3.x.x",
		"http-server": "0.x.x",
		"rimraf": "3.x.x",
		"rollup": "2.x.x",
		"rollup-plugin-terser": "7.x.x",
		"three": "0.x.x",
		"three-demo": "4.x.x",
		"tslib": "2.x.x",
		"typedoc": "0.x.x",
		"typescript": "4.x.x"
	}
}
