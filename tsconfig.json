{
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "build",
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"noEmit": true,
		"strict": true,
		"sourceMap": false,
		"removeComments": true,
		"strictNullChecks": false
	},
	"include": [
		"src/**/*",
		"demo/src/**/*"
	]
}
