{
	"include": ["./src", "./demo/src"],
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"spatial-controls": ["./src/index.js"]
		},
		"moduleResolution": "NodeNext",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"noImplicitOverride": true
	},
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"out": "public/docs",
		"theme": "default",
		"readme": "none",
		"excludePrivate": true,
		"includeVersion": true,
		"hideGenerator": true,
		"treatWarningsAsErrors": true
	}
}
