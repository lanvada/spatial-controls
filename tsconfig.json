{
	"include": ["./src", "./demo/src"],
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"spatial-controls": ["./src/index.js"]
		},
		"moduleResolution": "NodeNext",
		"module": "ESNext",
		"target": "ESNext",
		"strict": true,
		"sourceMap": false,
		"importHelpers": true,
		"skipLibCheck": true,
		"noImplicitOverride": true
	},
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"exclude": "**/node_modules/**",
		"out": "./public/docs",
		"theme": "default",
		"readme": "none",
		"excludePrivate": true,
		"excludeInternal": true,
		"includeVersion": true,
		"hideGenerator": true,
		"treatWarningsAsErrors": true,
		"externalSymbolLinkMappings": {
			"@types/three": {
				"*": "https://threejs.org/docs/"
			},
			"three": {
				"*": "https://threejs.org/docs/"
			}
    }
	}
}
